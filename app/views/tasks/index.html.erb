
<%= render "layouts/barTop" %>
<p id="notice"><%= notice %></p>

<div class="bot">
  <strong>green --> finished, yellow --> not due task, red --> due task</strong>
  <br>
  <strong><%= link_to 'New Task', new_task_path %></strong>
</div>
<section>
  <div class="left">
    <h1>Not finished Tasks</h1>
    <table >
      <thead>
        <tr>
          <th>Title</th>
          <th>Finish date</th>
          <th>Autor</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @due_task.each do |task| %>
          <tr>
            <td class="due_task"><%= task.title %></td>
            <td><%= task.finish_date %></td>
            <td><%= task.user.username %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>

        <% @task.each do |task| %>
          <tr>
            <td class="task"><%= task.title %></td>
            <td><%= task.finish_date %></td>
            <td><%= task.user.username %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="right">
    <h1>finished Tasks</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Finish date</th>
          <th>Autor</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @finished_task.each do |task| %>
          <tr>
            <td class="finished"><%= task.title %></td>
            <td><%= task.finish_date %></td>
            <td><%= task.user.username %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>



