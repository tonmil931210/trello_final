<%= render "layouts/barTop" %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Duration(Hour):</strong>
  <%= @task.duration %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @task.start_date %>
</p>

<p>
  <strong>Finish date:</strong>
  <%= @task.finish_date %>
</p>

<p>
  <strong>Autor:</strong>
  <%= @task.user.username %>
</p>

<p>
  <strong>Finish:</strong>
  <%= @task.finish_task %>
</p>


